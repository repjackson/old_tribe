.ui.inverted.borderless.pointing.menu
    .ui.container
        a.ui.inverted.header.item(href='/') 
            |tribe
        .right.menu
            if currentUser
                a#add.item Add
                a.icon.item(href="/dashboard" class="{{isActivePath '/dashboard'}}")
                    | #{currentUser.credits} credits
                a.icon.item(href="/messages" class="{{isActivePath '/messages'}}")
                    i.large.envelope.icon
                a.item(href="/profile/edit" class="{{isActivePath '/profile/edit'}}")
                    if currentUser.profile.image_id
                        img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=30 height=30 gravity='face' crop='fill'}}")
                    else
                        i.user.icon
                    if currentUser.profile.name
                        | #{currentUser.profile.name}
                    else
                        | #{currentUser.username}
                a#logout.ui.item(href='#') 
                    i.large.sign.out.icon
                    |Log Out
            else
                a.ui.item(href='/sign-in') 
                    i.large.sign.in.icon
                    |Log In
    
    
