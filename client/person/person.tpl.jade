.ui.segment
    .ui.stackable.grid
        .four.wide.column
            img.ui.centered.image(src="{{c.url profile.image_id width=200 height=200 gravity='face' crop='fill'}}")
        .twelve.wide.column
            .ui.header #{profile.name}
            .meta
                each tags
                    .ui.tiny.compact.button.person_tag(class=tag_class) #{this}
            .actions
                if currentUser
                    if is_in_tribe
                        .remove_from_tribe.ui.basic.red.button    
                            i.minus.icon
                            |Tribe
                    else
                        .add_to_tribe.ui.basic.green.button
                            i.plus.icon
                            | Tribe