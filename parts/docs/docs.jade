

template(name='docs')
    .ui.container.basic.segment
        .ui.four.stackable.cards
            each docs
                +card_view

        


template(name='view')
    .ui.basic.segment
        .content
            a(href="/view/#{_id}")
                .image
                    img.ui.large.centered.image(src="{{c.url image_id }}")
                h1.ui.header #{title}
            .meta
                each tags
                    .ui.button.tag(class=tag_class) #{this}
            .description
                |!{description}
            if can_edit
                .edit.ui.icon.basic.button
                    i.pencil.icon.icon
            else
                | by #{author.username} #{when}
